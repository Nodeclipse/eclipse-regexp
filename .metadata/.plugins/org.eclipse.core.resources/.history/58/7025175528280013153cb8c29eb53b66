package org.eclipse.regexp.ui.view;

import org.eclipse.jface.layout.GridDataFactory;
import org.eclipse.swt.SWT;
import org.eclipse.swt.widgets.Composite;
import org.eclipse.swt.widgets.Label;
import org.eclipse.swt.widgets.Text;
import org.eclipse.ui.forms.widgets.FormToolkit;

public class InputControl {

	public Label label;
	
	public InputControl(final Composite composite, final FormToolkit toolkit,
			final int index) {
		label = toolkit.createLabel(composite, "Input " + index + ":");
		final Text input1 = toolkit.createText(inputPanel, "");
		GridDataFactory.swtDefaults().align(SWT.FILL, SWT.CENTER)
				.grab(true, false).applyTo(input1);
	}
}
