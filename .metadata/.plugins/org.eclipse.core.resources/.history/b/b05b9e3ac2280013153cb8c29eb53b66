package org.eclipse.regexp.ui.view.results;

import org.eclipse.jface.viewers.ITableLabelProvider;
import org.eclipse.jface.viewers.LabelProvider;
import org.eclipse.regexp.RegexpResult;
import org.eclipse.swt.graphics.Image;

public class ResultsLabelProvider extends LabelProvider implements
		ITableLabelProvider {

	private static final int INDEX = 0;
	private static final int INPUT = 1;
	private static final int MATCHES = 2;

	@Override
	public Image getColumnImage(final Object element, final int columnIndex) {
		return null;
	}

	@Override
	public String getColumnText(final Object element, final int columnIndex) {
		RegexpResult result = (RegexpResult) element;
		switch (columnIndex) {
		case INDEX:
		case INPUT:
			return result.input;
		case MATCHES:
			return boolLabel(result.mathes);
		}
		return null;
	}

	private String boolLabel(final boolean val) {
		return val ? "Yes" : "No";
	}
}
