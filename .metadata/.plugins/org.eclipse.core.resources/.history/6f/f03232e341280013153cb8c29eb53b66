package org.eclipse.regexp.ui.view;

import org.eclipse.jface.action.Action;
import org.eclipse.jface.preference.PreferenceDialog;
import org.eclipse.regexp.ui.RegexpUIConstants;
import org.eclipse.ui.PlatformUI;
import org.eclipse.ui.dialogs.PreferencesUtil;
import org.eclipse.ui.plugin.AbstractUIPlugin;

public class OpenSettings extends Action {

	public OpenSettings() {
		super("Settings", AbstractUIPlugin.imageDescriptorFromPlugin(RegexpUIConstants.PLUGIN_ID, RegexpUIConstants.SETTINGS_ICON));
	}
	@Override
	public void run() {
		PreferenceDialog pref = PreferencesUtil.createPreferenceDialogOn(
				PlatformUI.getWorkbench().getDisplay().getActiveShell(),
				RegexpUIConstants.PREF_PAGE, null, null);
		pref.open();
	}
}
