package org.eclipse.regexp;

import java.util.List;

import com.google.common.collect.Lists;

public class RegexpResult {

	public final String input;
	public final boolean mathes;
	public final String replaceFirst;
	public final String replaceAll;
	public final boolean lookingAt;

	public List<Group> groups = Lists.newArrayList();

	public RegexpResult(final String input, final boolean mathes,
			final String replaceFirst, final String replaceAll,
			final boolean lookingAt) {
		this.input = input;
		this.mathes = mathes;
		this.replaceFirst = replaceFirst;
		this.replaceAll = replaceAll;
		this.lookingAt = lookingAt;
	}

	public boolean find() {
		return groups.isEmpty();
	}

	public class Group {
		public final int start;
		public final int end;
		public final String group;

		public Group(final int start, final int end, final String group) {
			this.start = start;
			this.end = end;
			this.group = group;
		}
	}

	void addGroup(final int start, final int end, final String group) {
		groups.add(new Group(start, end, group));
	}
}
